<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:id="@+id/textView_listView5column_username"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textView_listView5column_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="19"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textColor="@android:color/holo_red_dark"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkbox_listView5column_alert"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="13"
            android:checked="false"
            app:buttonTint="@android:color/holo_red_dark" />

        <CheckBox
            android:id="@+id/checkbox_listView5column_mute"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            android:checked="false"
            app:buttonTint="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_listView5column_delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_close_black_24dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>